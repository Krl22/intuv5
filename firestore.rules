rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuarios: dueño o admin pueden leer; dueño puede crear; dueño o admin pueden actualizar/borrar
    match /users/{uid} {
      allow read: if request.auth != null && (request.auth.uid == uid || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      allow create: if request.auth != null && request.auth.uid == uid;
      allow update, delete: if request.auth != null && (request.auth.uid == uid || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }

    // Recargas (topups): creadas por el dueño; leídas por dueño o admin; gestionadas por admin
    match /topups/{topupId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      allow update, delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /saved_addresses/{addressId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /rides/{rideId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /users/{uid}/{document=**} { allow read, write: if request.auth != null && request.auth.uid == uid; }
  }
}
