{
  "rules": {
    "rideRequests": {
      ".read": "auth != null",
      "$id": {
        ".write": "auth != null && (data.exists() ? data.child('userId').val() === auth.uid : newData.child('userId').val() === auth.uid)",
        "status": { ".validate": "newData.val() in ['searching','cancelled','assigned']" },
        "userId": { ".validate": "newData.val() === auth.uid" }
      }
    },
    "driverAvailability": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "currentRides": {
      "$id": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || data.child('driverId').val() === auth.uid)",
        ".write": false,
        "driverLocation": { ".write": "auth != null && data.parent().child('driverId').val() === auth.uid" },
        "clientLocation": { ".write": "auth != null && data.parent().child('userId').val() === auth.uid" }
      }
    }
  }
}
